        }

        h1 {
            color: #ff6b6b;
            font-size: 2.5rem;
            margin-bottom: 10px;
        }

        p {
            line-height: 1.6; to 
            font-size: 1.1rem;
        }

        .heart {
            color: #ff6b6b;
            font-size: 50px;
            animation: float 2s ease-in-out infinite;
            display: inline-block;
            cursor: pointer;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-15px); }
        }

        .btn {
            margin-top: 20px;
            padding: 12px 30px;
